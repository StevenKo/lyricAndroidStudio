<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/listview_selector">
    
      <RelativeLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          
          <TextView android:id="@+id/singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:maxLines="2"                
                android:textSize="20dp"
                android:textColor="#891919"
                android:typeface="serif"
                android:textStyle="bold"
                android:text="楊宗緯"
                />
          
          <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@+id/singer_name"
            >
        
        	<TextView 
                android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:text="專輯名稱："
            	android:maxLines="2"
            	android:layout_marginLeft="10dp"
            	android:textSize="15dp"
                android:textColor="#999999"
                android:typeface="serif"
                />
            
          <TextView android:id="@+id/text_album_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginLeft="25dp"
                android:textSize="26dp"
                android:textColor="#494949"
                android:typeface="serif"
                android:textStyle="bold"
                />
           </LinearLayout>
    
        </RelativeLayout>
        
        
        
               

	
    <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10px"
            android:layout_marginTop="10px"
            >
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                  android:id="@+id/author_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="發片日期:"
                android:textSize="22px" 
                  android:textColor="#999999"
                  android:typeface="serif"
                  >
                </TextView>
                <TextView
                android:id="@+id/text_album_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2008 9月"
                android:textSize="22px" 
                android:textColor="#555555"
                android:typeface="serif"
                android:maxLines="1"
                android:layout_toRightOf="@+id/author_tip"
                android:layout_marginLeft="15px"
                >
                </TextView>
                </LinearLayout>
    </RelativeLayout>
</LinearLayout>