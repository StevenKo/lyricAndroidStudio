<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
          android:orientation="vertical"
	    android:background="@drawable/listview_selector"
          android:padding="5dp"
         >
         <TextView android:id="@+id/singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:maxLines="2"                
                android:textSize="14dp"
                android:textColor="#891919"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:text="楊宗緯"
                />
         <RelativeLayout 
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_toLeftOf="@+id/singer_name">
         <TextView
            android:id="@+id/song_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲名稱："
        	android:maxLines="2"
        	android:layout_marginLeft="10dp"
        	android:textSize="10dp"
            android:textColor="#999999"
            android:typeface="serif"
            />
	    <TextView android:id="@+id/text_song_name"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="歌曲名稱"
            android:textSize="22dp"
            android:textColor="#494949"
            android:typeface="serif"
            android:textStyle="bold"
            android:layout_below="@+id/song_tip"
            android:layout_toRightOf="@+id/song_tip"
	        />
        
        </RelativeLayout>
          
    </RelativeLayout>

</LinearLayout>